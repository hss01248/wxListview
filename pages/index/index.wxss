/**index.wxss**/

@import "../../lib/pageManager/pageManager.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/*轮播*/
.section-swiper{

  height: 375rpx;
}

.swiper_box {
  /*width: 100%;*/
  height: 120px;
}

.swiper {
  height: 100%;
}

.swiper-item {
  display: block;
  height: 100%;
}

/** 专辑
 *
 **/
.slide-image {
  height:375rpx;
  width: 100%;
  display: inline-block;
  overflow: hidden;
}



.l-r {
  display: flex;
}

/*l_auto:占用剩下的*/
.l_auto {
  flex: 1;
}

.l-c {
  display: flex;
  /*justify-content: center;*/
  align-items: center;
}
/*垂直水平居中对齐*/
.l-c-c {
  display: flex;
  justify-content: center;
  align-items: center;
}

.lession-cover {
  display:inline-block;
  position:relative;
  width: 75px;
  height:75px;
  border: 1px solid #eaeaea;
  border-radius: 40px;
}

/** 微课*/
.lession-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 12px;
  padding-top: 8px;
  padding-right: 12px;
  padding-bottom: 8px;
  margin-top: 8px;
  background-color: #fff;
  padding: 8px;
  color: #787878;
}

.lession-item-right {
  margin-left: 11px;
  width: 100%;
}

.lession-name {
  padding-top: 9px;
  padding-bottom:9px;
  font-size: 16px;
  color: #555555;
}
.lession-split-line{
  height: 1px;
  align-content: center;
  margin-right: 24px;
  margin-left: 24px;
  background-color: #e4e4e4;
}

.lession-author{
  /*min-width:60px;*/
  font-size: 14px;
  color: #14b394;
  display: block;
  line-height: 30px;
  margin-right: 48rpx;
}
/* margin-left: 24px;*/
.play-count{
  display: block;

  font-size: 12px;
  color:#999999;
  line-height: 30px;
}
.aliagn-parent-right{
  position: absolute ;
  right: 30rpx;
}

.lesson-fee{
  color: #fd8149;
  font-size: 28rpx;
  margin-left: 5rpx;
}